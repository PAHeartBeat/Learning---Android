<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.paheartbeat.learning.explicitintentexample">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".MainActivity"
			android:label="@string/lbl_main_activity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".SocialInfoActivity"
		    android:label="@string/lbl_social_activity"
			/>
		<activity
			android:name=".ContactInfoActivity"
		    android:label="@string/lbl_contact_activity"
			/>
	</application>
</manifest>