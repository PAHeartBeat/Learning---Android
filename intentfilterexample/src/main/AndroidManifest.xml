<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.paheratbeat.intentfilterexample"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:label="@string/lbl_main_activity"
			android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:label="@string/lbl_custom_browser_activity"
			android:name=".CustomBrowserActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<action android:name="me.paheratbeat.intentfilterexample.LAUNCH"/>

				<category android:name="android.intent.category.DEFAULT"/>

				<data android:scheme="http"/>
				<data android:scheme="https"/>
			</intent-filter>
		</activity>
	</application>

</manifest>