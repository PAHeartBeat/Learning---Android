<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="me.paheartbeat.learning.contentproviderviasqllite.MainActivity">

	<TextView
		android:id="@+id/tvTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Content provider"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:textSize="30sp" />

	<TextView
		android:id="@+id/tvCompnayName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Tutorials point "
		android:textColor="#ff87ff09"
		android:textSize="30sp"
		android:layout_below="@+id/tvTitle"
		android:layout_centerHorizontal="true" />

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ibLogo"
		android:layout_below="@+id/tvCompnayName"
		android:layout_marginTop="5dp"
		android:layout_centerHorizontal="true"
		android:layout_alignLeft="@+id/tvTitle"
		android:layout_alignStart="@+id/tvTitle"
		android:layout_alignRight="@+id/tvTitle"
		android:layout_alignEnd="@+id/tvTitle"
		android:minHeight="30dp"
		android:maxHeight="150dp"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/txtID"
		android:layout_below="@+id/ibLogo"
		android:layout_marginTop="5dp"
		android:layout_centerHorizontal="true"
		android:layout_alignLeft="@+id/tvTitle"
		android:layout_alignStart="@+id/tvTitle"
		android:layout_alignRight="@+id/tvTitle"
		android:layout_alignEnd="@+id/tvTitle"
		android:hint="ID"
		android:textColorHint="@android:color/holo_blue_light"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/txtName"
		android:layout_below="@+id/txtID"
		android:layout_marginTop="2dp"
		android:layout_centerHorizontal="true"
		android:layout_alignLeft="@+id/txtID"
		android:layout_alignStart="@+id/txtID"
		android:layout_alignRight="@+id/txtID"
		android:layout_alignEnd="@+id/txtID"
		android:hint="Name"
		android:textColorHint="@android:color/holo_blue_light" />

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/txtGrade"
		android:layout_below="@+id/txtName"
		android:layout_marginTop="2dp"
		android:layout_centerHorizontal="true"
		android:layout_alignLeft="@+id/txtName"
		android:layout_alignStart="@+id/txtName"
		android:layout_alignRight="@+id/txtName"
		android:layout_alignEnd="@+id/txtName"
		android:hint="Grade"
		android:textColorHint="@android:color/holo_blue_bright" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/btnAdd"
		android:text="Add Name"
		android:layout_below="@+id/txtGrade"
		android:layout_marginTop="5dp"
		android:layout_centerHorizontal="true"
		android:layout_alignRight="@+id/txtGrade"
		android:layout_alignEnd="@+id/txtGrade"
		android:layout_alignLeft="@+id/txtGrade"
		android:layout_alignStart="@+id/txtGrade"
		android:onClick="onClickAddName"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Retrieve Student"
		android:id="@+id/btnGet"
		android:layout_below="@+id/btnAdd"
		android:layout_marginTop="2dp"
		android:layout_centerHorizontal="true"
		android:layout_alignRight="@+id/btnAdd"
		android:layout_alignEnd="@+id/btnAdd"
		android:layout_alignLeft="@+id/btnAdd"
		android:layout_alignStart="@+id/btnAdd"
		android:onClick="onClickRetrieveStudents"/>
</RelativeLayout>

